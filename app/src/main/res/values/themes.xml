<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.Hadeda" parent="Theme.AppCompat.DayNight.DarkActionBar">

        <!-- Primary brand color -->
        <item name="colorPrimary">@color/argentinian_blue</item>
        <item name="colorPrimaryVariant">@color/steel_blue</item>
        <item name="colorOnPrimary">@color/white_smoke</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorPrimaryContainer">@color/white_smoke</item>
        <item name="colorOnPrimaryContainer">@color/steel_blue</item>
        <item name="android:navigationBarColor">@color/argentinian_blue</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/argentinian_blue</item>

    </style>

    <!-- NoActionBar application theme -->
    <style name="Theme.Hadeda.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">

        <!-- Primary brand color -->
        <item name="colorPrimary">@color/argentinian_blue</item>
        <item name="colorPrimaryVariant">@color/steel_blue</item>
        <item name="colorOnPrimary">@color/white_smoke</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorPrimaryContainer">@color/white_smoke</item>
        <item name="colorOnPrimaryContainer">@color/steel_blue</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/argentinian_blue</item>

    </style>

</resources>